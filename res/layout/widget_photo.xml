<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/widget_background"
    android:backgroundTint="@color/themed_icon_background_color"
    android:padding="10dp">

    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/photo_default_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/widget_add_photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_widget_onboarding"
        android:drawableStart="@drawable/ic_add_a_photo"
        android:drawablePadding="8dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/themed_icon_color"
        android:layout_gravity="center" />
</LinearLayout>

